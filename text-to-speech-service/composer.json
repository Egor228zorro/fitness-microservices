{
    "name": "rebuilder/text-to-speech-service",
    "description": "Text-to-Speech service for ReBuilder using Murf.ai",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "php-amqplib/php-amqplib": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.91",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Rebuilder\\TextToSpeech\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "fix": "php-cs-fixer fix",
        "test": "vendor/bin/phpunit.bat"
    }
}
